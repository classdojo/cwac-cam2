<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fab="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/cwac_cam2_background">

	<ImageView
		android:id="@+id/cwac_cam2_preview_image"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/cwac_cam2_btn_layout"/>

	<RelativeLayout
					android:id="@+id/relative_parent"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_above="@+id/cwac_cam2_btn_layout"
					android:background="#000000">

		<VideoView
			android:id="@+id/cwac_cam2_preview_video"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:visibility="gone"/>

	</RelativeLayout>

	<TextView
		android:id="@+id/cwac_cam2_fragment_confirmation_preview_title"
		android:layout_width="match_parent"
		android:layout_height="?android:attr/actionBarSize"
		android:background="@color/cam2_dark_alpha"
		android:gravity="center"
		android:text="@string/cwac_cam2_preview"
		android:textColor="@color/cwac_cam2_white"
		android:textSize="@dimen/global_metric_medium"/>

	<LinearLayout
		android:id="@+id/cwac_cam2_btn_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_margin="@dimen/global_metric_small"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/cwac_cam2_cancel_btn"
			android:layout_width="0dp"
			android:layout_height="@dimen/cwac_cam2_confirm_fragment_button_height"
			android:layout_marginRight="@dimen/global_metric_micro"
			android:layout_weight="1"
			android:background="@drawable/negative_button_selector"
			android:scaleType="center"
			android:src="@drawable/deny"/>

		<ImageView
			android:id="@+id/cwac_cam2_confirm_btn"
			android:layout_width="0dp"
			android:layout_height="@dimen/cwac_cam2_confirm_fragment_button_height"
			android:layout_marginLeft="@dimen/global_metric_micro"
			android:layout_weight="1"
			android:background="@drawable/positive_button_selector"
			android:scaleType="center"
			android:src="@drawable/confirm_tick"/>

	</LinearLayout>
</RelativeLayout>