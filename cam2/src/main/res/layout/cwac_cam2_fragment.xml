<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fab="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/cwac_cam2_background">


	<FrameLayout
		android:id="@+id/cwac_cam2_preview_stack"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<com.commonsware.cwac.cam2.CameraView
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>
	</FrameLayout>

	<ProgressBar
		android:id="@+id/cwac_cam2_progress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:visibility="visible"/>

	<ProgressBar
		android:id="@+id/rec_position_progressbar"
		android:layout_width="match_parent"
		android:layout_height="4dp"
		android:layout_above="@+id/cwac_cam2_picture_container"
		android:max="10000"
		android:paddingBottom="0dp"
		android:paddingTop="0dp"
		android:progress="0"
		style="@style/Widget.AppCompat.ProgressBar.Horizontal"
		tools:progress="500"
		/>

	<LinearLayout
		android:id="@+id/cwac_cam2_picture_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="#77000000"
		android:gravity="center"
		android:orientation="vertical"
		android:paddingBottom="@dimen/cwac_cam2_rec_vert_margin"
		android:paddingTop="@dimen/cwac_cam2_rec_vert_margin">

		<ImageView
			android:id="@+id/cwac_cam2_picture"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:src="@drawable/photo_button_selector"/>
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/cwac_cam2_top_layout"
		android:layout_width="match_parent"
		android:layout_height="?android:attr/actionBarSize"
		android:layout_alignParentTop="true"
		android:background="@color/cam2_dark_alpha">

		<ImageView
			android:id="@+id/cwac_cam2_close_camera"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:padding="16dp"
			android:src="@drawable/cancel"/>

		<ImageView
			android:id="@+id/cwac_cam2_switch_camera"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:padding="16dp"
			android:src="@drawable/cwac_cam2_ic_switch_camera"/>
	</RelativeLayout>
